    BoxLayout:
        orientation: "horizontal"
        size_hint: 0.25, 0.1
        spacing: 10
        canvas.before:
            Color:
                rgba: (0.7, 0.7, 0.7, 0.6)
            Rectangle:
                size: self.width, self.height
                pos: self.x, self.y-0.05
        Label:
            id: cudaAvailableLabel
            size_hint_x: 0.3
            bold: True
            color: (0,1,0,1)
            font_size: 30
            background_normal: ''

            canvas.before:
                Color:
                    rgba: (0, 0, 0.8, 0.5)
                Rectangle:
                    size: self.width, self.height
                    pos: self.x, self.y-0.05
        Label:
            text: 'Carplate Recognition'
            color: (0,0,0,1)
            font_size: 20

        BoxLayout:
            size_hint_x: 0.2
            orientation: "horizontal"

            Label:
                text: 'Cam Display'
                color: (0,0,0,1)
                font_size: 15
            CheckBox:
                id: cam_display_btn
                active: True
                on_press: root.on_camdisplay_active(self, self.active)

        BoxLayout:
            size_hint_x: 0.2
            orientation: "horizontal"

            Label:
                text: 'Draw Boxes'
                color: (0,0,0,1)
                font_size: 15
            CheckBox:
                id: draw_boxes_btn
                active: True
                on_press: root.on_drawboxes_active(self, self.active)
        Button:
            id: full_screen_btn
            text: 'FULL SCREEN'
            size_hint_x: 0.3
            size_hint_y: 0.8
            pos_hint: {'y': .1}
            background_normal: ''
            background_color: (0.2, 0.2, 0.2, 1.0)
            on_press: root.toggle_full_screen()

        Button:
            text: 'QUIT'
            size_hint_x: 0.2
            size_hint_y: 0.8
            pos_hint: {'y': .1}
            background_normal: ''
            background_color: (0.2, 0.2, 0.2,  1.0)
            on_press: root.exit_program()


